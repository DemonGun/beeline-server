{
    "env": {
        "es6": true,
        "node": true
    },
    "parser": "babel-eslint",
    "plugins": [
        "babel"
    ],
    "extends": "eslint:recommended",
    "rules": {
        "accessor-pairs": 1,
        "array-bracket-spacing": 1,
        "arrow-spacing": [1, { "before": true, "after": true }],
        "block-spacing": [1, "always"],
        "brace-style": [1, "1tbs", { "allowSingleLine": true }],
        "comma-dangle": [1, "only-multiline"],
        "comma-spacing": [1, { "before": false, "after": true }],
        "comma-style": [1, "last"],
        "curly": [1, "multi-line"],
        "dot-location": [1, "property"],
        "eol-last": 1,
        "eqeqeq": [2, "allow-null"],
        "generator-star-spacing": [1, { "before": true, "after": true }],
        "handle-callback-err": [1, "^(err|error)$" ],
        "indent": [1, 2, { "SwitchCase": 1 }],
        "jsx-quotes": [1, "prefer-single"],
        "key-spacing": [1, { "beforeColon": false, "afterColon": true }],
        "keyword-spacing": [1, { "before": true, "after": true }],
        "new-parens": 1,
        "no-array-constructor": 1,
        "no-await-in-loop": 1,
        "no-caller": 1,
        "no-console": 0,
        "no-constant-condition": [2, { "checkLoops": false }],
        "no-duplicate-imports": 1,
        "no-eval": 2,
        "no-extend-native": 1,
        "no-extra-bind": 1,
        "no-extra-parens": [1, "functions"],
        "no-floating-decimal": 1,
        "no-implied-eval": 1,
        "no-iterator": 1,
        "no-label-var": 1,
        "no-labels": [1, { "allowLoop": false, "allowSwitch": false }],
        "no-lone-blocks": 1,
        "no-multi-spaces": 1,
        "no-multi-str": 1,
        "no-multiple-empty-lines": [1, { "max": 2 }],
        "no-native-reassign": 1,
        "no-negated-in-lhs": 1,
        "no-new": 1,
        "no-new-func": 1,
        "no-new-object": 1,
        "no-new-require": 1,
        "no-new-wrappers": 1,
        "no-octal-escape": 1,
        "no-path-concat": 1,
        "no-proto": 1,
        "no-redeclare": 1,
        "no-return-assign": [1, "except-parens"],
        "no-self-compare": 1,
        "no-sequences": 1,
        "no-shadow-restricted-names": 1,
        "no-spaced-func": 1,
        "no-throw-literal": 1,
        "no-trailing-spaces": 1,
        "no-undef-init": 1,
        "no-unmodified-loop-condition": 1,
        "no-unneeded-ternary": [1, { "defaultAssignment": false }],
        "no-unused-vars": [1, { "vars": "all", "args": "none" }],
        "no-useless-call": 1,
        "no-useless-computed-key": 1,
        "no-useless-constructor": 1,
        "no-whitespace-before-property": 1,
        "no-with": 1,
        "one-var": [1, { "initialized": "never" }],
        "operator-linebreak": [1, "after", { "overrides": { "?": "before", ":": "before" } }],
        "padded-blocks": [1, "never"],
        "semi": [2, "never"],
        "semi-spacing": [2, { "before": false, "after": true }],
        "space-before-blocks": [1, "always"],
        "space-before-function-paren": [1, "always"],
        "space-in-parens": [1, "never"],
        "space-infix-ops": 1,
        "space-unary-ops": [1, { "words": true, "nonwords": false }],
        "spaced-comment": [1, "always", { "markers": ["global", "globals", "eslint", "eslint-disable", "*package", "!", ","] }],
        "template-curly-spacing": [1, "never"],
        "wrap-iife": [1, "any"],
        "yield-star-spacing": [1, "both"],
        "yoda": [1, "never"],

        "babel/new-cap": 1
    }
}
